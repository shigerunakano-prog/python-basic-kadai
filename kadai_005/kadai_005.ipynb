        "# 台形の各辺（cm）\n",
        "upper_base = 10\n",
        "lower_base = 20\n",
        "height = 5\n",
        "\n",
        "# 台形の面積の計算\n",
        "area = (upper_base + lower_base) * height / 2\n",
        "\n",
        "# 結果の出力（単位付き）\n",
        "print(f\"{area}cm²\")\n"
      ]
